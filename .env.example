# Environment Configuration - Production Template
NODE_ENV=production
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=your-production-mongodb-connection-string-here

# JWT Configuration
JWT_SECRET=your-very-secure-jwt-secret-key-here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Server Configuration
PORT=3000

# Optional HTTPS configuration (provide absolute paths when enabling HTTPS)
SSL_KEY_PATH=
SSL_CERT_PATH=
SSL_CA_PATH=

# VNPay gateway (sandbox by default)
VNPAY_TMNCODE=
VNPAY_HASH_SECRET=
VNPAY_PAYMENT_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNPAY_RETURN_URL=http://localhost:5000/api/payments/vnpay/callback

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# External APIs
SMS_API_KEY=your-sms-api-key
EMAIL_SERVICE_API_KEY=your-email-service-api-key

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CLIENT_AUDIENCES=your-google-client-id

# Facebook OAuth Configuration
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Agora Configuration (for live streaming)
AGORA_APP_ID=your-agora-app-id
AGORA_APP_CERT=your-agora-app-certificate
AGORA_TOKEN_EXPIRE_SECONDS=3600

# Firebase Admin Configuration (for phone authentication)
FIREBASE_SERVICE_ACCOUNT_JSON=
# Elasticsearch (optional) â€” set this to enable advanced search features
# If you don't set ELASTICSEARCH_NODE, the app will keep Elasticsearch disabled and fall back to MongoDB search.
# Example for a local ES: http://localhost:9200
# If your ES requires auth you can include credentials in the URL (e.g. https://user:pass@es-host:9200)
ELASTICSEARCH_NODE=

# Optional: provide TLS/CA path when using self-signed certificates
# ELASTICSEARCH_CA_PATH=
